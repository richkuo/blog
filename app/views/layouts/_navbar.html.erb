<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/posts">Blog name</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <% top_categories(1) %>
        <% for i in 0...10 %>
          <li><%= link_to @categories.last.name, @categories.pop unless @categories.size == 0 %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email unless !current_user %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li class="dropdown-header"><%= current_user.name unless !current_user %></li>
              <li><%= link_to "My Posts", current_user %></li>
              <li class="divider"></li>
              <li class="dropdown-header">Settings</li>
              <li><%= link_to "My Account", current_user %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>